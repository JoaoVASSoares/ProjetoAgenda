<%- include("includes/head") %> <%- include("includes/nav") %>

<div class="conteiner">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Crie sua conta</h1>
      <p class="text-center lead">
        Crie sua conta preenchendo o formulario abaixo
      </p>

      <%- include('includes/messages') %>

      <div class="col-lg my-5">
        <h4>Faça seu cadastro</h4>
        <p>Se você não tem uma conta, preencha o formulário abaixo:</p>
        <form class="form-cadastro" action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
          <div class="form-group">
            <label for="exampleInputEmail">Seu e-mail</label>
            <input
              type="email"
              class="form-control"
              id="exampleInputEmail"
              aria-describedby="emailHelp"
              placeholder="Digite o e-mail"
              name="email"
            />
            <small id="emailHelp" class="form-text text-muted"
              >Nunca compartilharemos seu e-mail com mais ninguém.</small
            >
          </div>
          <div class="form-group">
            <label for="exampleInputPasswordw">Sua senha</label>
            <input
              type="password"
              class="form-control"
              id="exampleInputPassword"
              placeholder="Senha"
              name="password"
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword2">Repita a senha</label>
            <input
              type="password"
              class="form-control"
              id="exampleInputPassword2"
              placeholder="Repita a senha"
              name="rpass"
            />
          </div>
          <button type="submit" class="btn btn-primary">
            Criar minha conta
          </button>
        </form>
      </div>

      <div class="col-lg-2"></div>
    </div>

  </div>
</div>
<%- include("includes/footer") %>
